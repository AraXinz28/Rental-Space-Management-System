<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.ZoneManagementController"
            style="-fx-background-color: #f8f9fa;
                    -fx-font-family: 'Prompt';
                    -fx-font-size: 14px;">

    <top>
        <fx:include source="/views/header.fxml"/>
    </top>
    <left>
        <fx:include source="/views/sidebaradmin.fxml"/>
    </left>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox spacing="0">
                <HBox alignment="BOTTOM_LEFT" spacing="2">
                    <Button fx:id="zoneTab" text="จัดการโซน" prefHeight="60" prefWidth="140" maxHeight="100"
                            style="-fx-background-color: #FFFFFF; -fx-background-radius: 10 10 0 0; -fx-text-fill: black; -fx-border-color: #e0e0e0; -fx-border-width: 1 1 0 1; -fx-border-radius: 10 10 0 0;"/>
                    <Button fx:id="spaceTab" text="จัดการพื้นที่" 
                            onAction="#goToSpaceManagement"
                            prefHeight="60" prefWidth="140" maxHeight="100"
                            style="-fx-background-color: #E0E0E0; -fx-background-radius: 10 10 0 0; -fx-text-fill: black;"/>
                </HBox>
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 0 16 16 16; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 5); -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 0 16 16 16;">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox spacing="6">
                            <Label text="ค้นหา"/>
                            <TextField fx:id="searchField" promptText="ชื่อโซน" prefWidth="350" prefHeight="35" style="-fx-border-radius: 5;"/>
                        </VBox>
                        <VBox spacing="6">
                            <Label text="สถานะพื้นที่"/>
                            <ComboBox fx:id="statusCombo" promptText="ทุกสถานะ" prefWidth="200" prefHeight="35"/>
                        </VBox>
                    </HBox>
                    <HBox spacing="15">
                        <Button text="กรองข้อมูล" prefHeight="35" prefWidth="100" style="-fx-background-color: #C5C5C5; -fx-text-fill: black; -fx-background-radius: 5;"/>
                        <Button text="รีเซ็ต" prefHeight="35" prefWidth="100" style="-fx-background-color: #D9D9D9; -fx-text-fill: black; -fx-background-radius: 5;"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);" VBox.vgrow="ALWAYS">
                    <TableView fx:id="zoneTable" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                        <columns>
                            <TableColumn fx:id="colZoneName" text="ชื่อโซน" prefWidth="200" style="-fx-alignment: CENTER;"/>
                            <TableColumn fx:id="colSlot" text="จำนวนล็อก" prefWidth="150" style="-fx-alignment: CENTER;"/>
                            <TableColumn fx:id="colStatus" text="สถานะ" prefWidth="150" style="-fx-alignment: CENTER;"/>
                            <TableColumn fx:id="colAction" text="จัดการ" prefWidth="120" style="-fx-alignment: CENTER;"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <Button text="เพิ่มโซน" onAction="#goToAddZone"
                            style="-fx-background-color: #3A3F6A; -fx-text-fill: white; -fx-padding: 10 25; -fx-background-radius: 8;"/>
                </HBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>