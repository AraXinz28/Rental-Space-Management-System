<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.SpaceManagementController"
            style="-fx-background-color: #f8f9fa;
                    -fx-font-family: 'Prompt';
                    -fx-font-size: 14px;">

    <top>
        <fx:include source="/views/header.fxml"/>
    </top>
    <left>
        <fx:include source="/views/sidebaradmin.fxml"/>
    </left>

    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox spacing="0">
                <HBox alignment="BOTTOM_LEFT" spacing="2">
                    <Button fx:id="zoneTab" text="จัดการโซน" 
                            onAction="#goToZoneManagement"
                            prefHeight="60" prefWidth="140"
                            style="-fx-background-color: #E0E0E0; -fx-background-radius: 10 10 0 0;"/>

                    <Button fx:id="spaceTab" text="จัดการพื้นที่"
                            prefHeight="60" prefWidth="140"
                            style="-fx-background-color: #FFF; -fx-background-radius: 10 10 0 0;"/>
                </HBox>

                <VBox spacing="15"
                      style="-fx-background-color: white;
                             -fx-background-radius: 0 16 16 16;
                             -fx-padding: 25;
                             -fx-border-color: #e0e0e0;
                             -fx-border-width: 1;">
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <VBox spacing="6">
                            <Label text="ค้นหา"/>
                            <TextField fx:id="searchField"
                                       promptText="ชื่อโซน"
                                       prefWidth="350"
                                       prefHeight="35"/>
                        </VBox>

                        <VBox spacing="6">
                            <Label text="สถานะพื้นที่"/>
                            <ComboBox fx:id="statusCombo"
                                      promptText="ทุกสถานะ"
                                      prefWidth="200"
                                      prefHeight="35"/>
                        </VBox>
                    </HBox>

                    <HBox spacing="15">
                        <Button text="กรองข้อมูล"
                                onAction="#handleSearch"
                                prefHeight="35"
                                prefWidth="100"/>

                        <Button text="รีเซ็ต"
                                onAction="#handleReset"
                                prefHeight="35"
                                prefWidth="100"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="15" VBox.vgrow="ALWAYS">
                <VBox style="-fx-background-color: white;
                             -fx-background-radius: 10;
                             -fx-padding: 15;"
                      VBox.vgrow="ALWAYS">
                    <TableView fx:id="zoneTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colZoneName" text="โซน"/>
                            <TableColumn fx:id="colSlot" text="รหัสพื้นที่"/>
                            <TableColumn fx:id="colSize" text="ขนาดพื้นที่"/>
                            <TableColumn fx:id="colStatus" text="สถานะ"/>
                            <TableColumn fx:id="colAction" text="จัดการ"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <HBox alignment="CENTER_RIGHT">
                    <Button text="เพิ่มพื้นที่"
                            onAction="#goToAddSpace"/>
                </HBox>
            </VBox>

        </VBox>
    </center>
</BorderPane>
