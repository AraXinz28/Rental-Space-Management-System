<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.CheckPaymentStatusController"
            prefWidth="1280" prefHeight="700">

    <!-- ===== Header ===== -->
    <top>
        <fx:include source="header.fxml"/>
    </top>

    <!-- ===== Sidebar ===== -->
    <left>
        <fx:include source="sidebaradmin.fxml"/>
    </left>

    <!-- ===== CONTENT ===== -->
    <center>
        <ScrollPane fitToWidth="true"
                    style="-fx-background:#f6f7f9;">
            <content>

                <VBox spacing="25"
                      style="-fx-background-color:#f6f7f9;">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <!-- ===== FILTER ===== -->
                    <VBox spacing="15"
                          style="-fx-background-color:white; -fx-background-radius:12;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <HBox spacing="20">

                            <VBox spacing="6">
                                <Label text="ค้นหา" style="-fx-font-size:15; -fx-font-weight:bold;"/>
                                <TextField fx:id="txtSearch"
                                           promptText="ชื่อลูกค้า / โซนล็อก"
                                           prefWidth="240"/>
                            </VBox>

                            <VBox spacing="6">
                                <Label text="การชำระเงิน" style="-fx-font-size:15; -fx-font-weight:bold;"/>
                                <ComboBox fx:id="cbMethod" prefWidth="200"/>
                            </VBox>

                            <VBox spacing="6">
                                <Label text="วันที่ชำระ" style="-fx-font-size:15; -fx-font-weight:bold;"/>
                                <DatePicker fx:id="dpDate" prefWidth="200"/>
                            </VBox>

                            <VBox spacing="6">
                                <Label text="เรียงลำดับ" style="-fx-font-size:15; -fx-font-weight:bold;"/>
                                <ComboBox fx:id="cbSort" prefWidth="200"/>
                            </VBox>

                        </HBox>

                        <Button text="รีเซ็ต"
                                onAction="#handleReset"
                                style="-fx-background-color:#6c757d; -fx-text-fill:white;"/>
                    </VBox>

                    <!-- ===== TABLE ===== -->
                    <VBox spacing="10"
                          style="-fx-background-color:white; -fx-background-radius:12;">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <Label text="รายการการชำระเงิน"
                               style="-fx-font-size:16; -fx-font-weight:bold;"/>

                        <TableView fx:id="paymentTable"
                                   VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colShop" text="ชื่อลูกค้า"/>
                                <TableColumn fx:id="colLock" text="โซน / ล็อก"/>
                                <TableColumn fx:id="colMethod" text="วิธีชำระเงิน"/>
                                <TableColumn fx:id="colDeposit" text="ค่ามัดจำ"/>
                                <TableColumn fx:id="colRent" text="ค่าเช่า"/>
                                <TableColumn fx:id="colTotal" text="ยอดรวม"/>
                                <TableColumn fx:id="colDate" text="วันที่ชำระ"/>
                            </columns>
                        </TableView>
                    </VBox>

                    <!-- ===== DETAIL (WEB STYLE CARD) ===== -->
                    <VBox spacing="15"
                          style="-fx-background-color:white;
                                 -fx-background-radius:14;
                                 -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 12,0,0,4);">
                        <padding>
                            <Insets top="24" right="24" bottom="24" left="24"/>
                        </padding>

                        <Label text="รายละเอียดการชำระเงิน"
                               style="-fx-font-size:17; -fx-font-weight:bold;"/>

                        <HBox spacing="30">

                            <!-- LEFT : INFO -->
                            <VBox spacing="14" prefWidth="420">
                                <Label fx:id="lblMethod"
                                       style="-fx-font-size:15; -fx-font-weight:bold;"/>

                                <VBox spacing="8"
                                      style="-fx-background-color:#f8f9fa;
                                             -fx-background-radius:10;
                                             -fx-padding:14;">
                                    <Label fx:id="lblDeposit" style="-fx-font-size:14;"/>
                                    <Label fx:id="lblRent" style="-fx-font-size:14;"/>
                                    <Separator/>
                                    <Label fx:id="lblTotal"
                                           style="-fx-font-size:16;
                                                  -fx-font-weight:bold;
                                                  -fx-text-fill:#198754;"/>
                                </VBox>
                            </VBox>

                            <!-- RIGHT : IMAGE -->
                            <VBox spacing="10" alignment="CENTER" prefWidth="360">
                                <ImageView fx:id="slipImage"
                                           fitWidth="300"
                                           preserveRatio="true"
                                           style="-fx-border-color:#e0e0e0;
                                                  -fx-border-radius:8;
                                                  -fx-background-radius:8;"/>
                            </VBox>

                        </HBox>

                    </VBox>

                </VBox>

            </content>
        </ScrollPane>
    </center>

</BorderPane>
