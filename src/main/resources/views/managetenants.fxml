<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.ManageTenantsController"
            style="-fx-background-color: #ffffff;">

    <!-- HEADER -->
    <top>
        <fx:include fx:id="header" source="/views/header.fxml"/>
    </top>

    <!-- SIDEBAR -->
    <left>
        <fx:include fx:id="menu" source="/views/sidebaradmin.fxml"/>
    </left>

    <!-- CONTENT -->
    <center>
        <VBox spacing="20" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="20" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Title -->
            <Label text="จัดการผู้เช่า"
                   style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #090909ff;"/>

           <!-- Filter / Sort Section -->
<VBox spacing="15">
    <!-- ช่องค้นหา -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="ชื่อลูกค้า:"/>
        <TextField fx:id="nameField" promptText="ชื่อลูกค้า" prefWidth="180"/>

        <Label text="เบอร์โทร:"/>
        <TextField fx:id="phoneField" promptText="เบอร์โทร" prefWidth="180"/>

        <Label text="อีเมล์:"/>
        <TextField fx:id="emailField" promptText="อีเมล์" prefWidth="200"/>

        <Label text="แสดงต่อหน้า:"/>
        <ComboBox fx:id="pageSizeCombo" prefWidth="100"/>
    </HBox>

    <!-- ส่วนจัดเรียงตาม + ปุ่มจัดเรียง + รีเซ็ต -->
<HBox spacing="15" alignment="CENTER_LEFT">
    <ComboBox fx:id="sortComboBox" prefWidth="220" promptText="จัดเรียงตาม"/>
    
    <Button text="จัดเรียง"
            onAction="#onSortClick"
            prefWidth="130" prefHeight="35"
            style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold;"/>

    <Button text="รีเซ็ต"
            onAction="#onResetClick"
            prefWidth="130" prefHeight="35"
            style="-fx-background-color: #ff9800; -fx-text-fill: white;"/>
</HBox>
</VBox>

            <!-- Table -->
            <TableView fx:id="tenantTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colName" text="ชื่อลูกค้า" prefWidth="180"/>
                    <TableColumn fx:id="colEmail" text="อีเมล์" prefWidth="220"/>
                    <TableColumn fx:id="colPhone" text="เบอร์โทร" prefWidth="140"/>
                    <TableColumn fx:id="colZone" text="โซน" prefWidth="100"/>
                    <TableColumn fx:id="colCreatedAt" text="วันที่ทำรายการ" prefWidth="160"/>
                    <TableColumn fx:id="colRejectReason" text="เหตุผล" prefWidth="300"/>
                    <TableColumn fx:id="colStatus" text="สถานะ" prefWidth="100"/>
                    <TableColumn fx:id="colContact" text="ติดต่อ" prefWidth="120"/>
                </columns>

                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

</BorderPane>