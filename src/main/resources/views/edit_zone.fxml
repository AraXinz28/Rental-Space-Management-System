<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.EditZoneController"
            prefWidth="1280.0" prefHeight="720.0"
            style="-fx-background-color: #f8f9fa;
                    -fx-font-family: 'Prompt';
                    -fx-font-size: 14px;">

    <top>
        <fx:include source="/views/header.fxml"/>
    </top>
    <left>
        <fx:include source="/views/sidebaradmin.fxml"/>
    </left>
    <center>
    <VBox spacing="20" VBox.vgrow="ALWAYS" style="-fx-background-radius: 10;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <VBox spacing="0">
            <HBox alignment="BOTTOM_LEFT">
                <Button text="แก้ไขโซน" prefHeight="40" prefWidth="140" maxHeight="60"
                       style="-fx-background-color: #FFFFFF; 
                       -fx-background-radius: 10 10 0 0; 
                       -fx-text-fill: black; 
                       -fx-border-color: #e0e0e0; 
                       -fx-border-width: 1 1 0 1; 
                       -fx-border-radius: 10 10 0 0;"/>
            </HBox>
            <VBox spacing="20" VBox.vgrow="ALWAYS" 
              style="-fx-background-color: white; 
              -fx-background-radius: 0 10 10 10; -fx-padding: 15; 
              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <!-- ชื่อโซน -->
            <VBox spacing="8">
                <Label text="ชื่อโซน"/>
                <TextField fx:id="zoneNameField" promptText="กรอกชื่อโซน" prefWidth="200" maxWidth="200"
                           prefHeight="40" 
                           style="-fx-background-radius: 8;"/>
            </VBox>

            <!-- จำนวนล็อก -->
            <VBox spacing="6">
                <Label text="จำนวนล็อก"/>
                <TextField fx:id="totalLocksField" promptText="กรอกจำนวนล็อก" prefWidth="200" maxWidth="200"
                           prefHeight="40"
                           style="-fx-background-radius: 8;" />
            </VBox>

            <!-- สถานะ -->
            <VBox spacing="6">
                <Label text="สถานะโซน"/>
                <ComboBox fx:id="statusComboBox"
                          prefHeight="40"/> 
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <!-- ปุ่ม -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="บันทึก"
                        onAction="#handleSave"
                        style="-fx-background-color:#3A3F6A;
                               -fx-text-fill:white;
                               -fx-background-radius:8;
                               "
                        prefHeight="40" prefWidth="100"/>
            </HBox>

            </VBox>
        </VBox>
        
        
    </VBox>
</center>

</BorderPane>