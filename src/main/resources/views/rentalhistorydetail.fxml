<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rental.controller.RentalHistoryDetailController"
            style="-fx-background-color: #F5F6F8;">

    <top>
        <fx:include source="/views/header.fxml"/>
    </top>

    <left>
        <fx:include source="/views/sidebaradmin.fxml"/>
    </left>


    <center>
        <StackPane>
            <padding>
                <Insets top="18" right="18" bottom="18" left="18"/>
            </padding>

            <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 16, 0, 0, 3);"
                  prefWidth="900" minHeight="520">

                <HBox alignment="CENTER_RIGHT"
                      style="-fx-background-color: #D7D7D7; -fx-background-radius: 10 10 0 0;">
                    <padding>
                        <Insets top="12" right="16" bottom="12" left="16"/>
                    </padding>

                    <Label fx:id="lblStatusPill" text="อนุมัติ"
                           style="-fx-background-color: #4F6F4A; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 18; -fx-background-radius: 999;"/>
                </HBox>

                <VBox spacing="16">
                    <padding>
                        <Insets top="18" right="26" bottom="22" left="26"/>
                    </padding>

                    <GridPane hgap="32" vgap="14">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>

                        <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0">
                            <Label text="ชื่อ :" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblName" text="-" />
                        </HBox>

                        <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0">
                            <Label text="โซน :" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblZone" text="-" />
                        </HBox>

                        <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0">
                            <Label text="หมายเลขที่ล็อค :" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblLockNo" text="-" />
                        </HBox>

                        <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="0">
                            <Label text="ประเภทสินค้า :" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblProductType" text="-" />
                        </HBox>

                        <HBox spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <Label text="เบอร์โทรศัพท์ :" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblPhone" text="-" />
                        </HBox>

                        <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                            <Label text="วัน/เดือน/ปี ที่ทำรายการ :" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblDate" text="-" />
                        </HBox>

                        <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                            <Label text="ข้อมูลการชำระเงิน :" style="-fx-font-weight: bold;"/>
                            <Label fx:id="lblPayment" text="-" />
                        </HBox>
                    </GridPane>

                    <Label text="สรุปการจอง" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <VBox style="-fx-border-color: #D0D0D0; -fx-border-radius: 2;">
                        <HBox alignment="CENTER_LEFT">
                            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                            <Label text="ค่ามัดจำ"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblDeposit" text="0.00 ฿" style="-fx-font-weight: bold;" />
                        </HBox>
                        <Separator/>

                        <HBox alignment="CENTER_LEFT">
                            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                            <Label text="ค่าเช่าทั้งหมด"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblTotalRent" text="0.00 ฿" style="-fx-font-weight: bold;" />
                        </HBox>
                        <Separator/>

                        <HBox alignment="CENTER_LEFT">
                            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

                            <Label text="ยอดชำระทั้งหมด"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="lblPaidTotal" text="0.00 ฿" style="-fx-font-weight: bold;" />
                        </HBox>
                    </VBox>


                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button text=" พิมพ์ใบเสร็จ"
        onAction="#onPrintSlip"
        style="-fx-background-color: #6E6E8A; -fx-text-fill: white;
               -fx-background-radius: 12; -fx-padding: 10 18;">

    <graphic>
        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
            <image>
                <Image url="@/images/print.png"/>
            </image>
        </ImageView>
    </graphic>
</Button>

                    </HBox>
                </VBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
