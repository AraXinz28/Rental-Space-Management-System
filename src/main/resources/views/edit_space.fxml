<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.EditSpaceController"
            prefWidth="1280.0" prefHeight="720.0"
            style="-fx-background-color: #f0f2f5;
                -fx-font-family: 'Prompt';
                    -fx-font-size: 14px;">
           
                    
    <fx:define>
        <ToggleGroup fx:id="statusGroup"/>
    </fx:define>

    <top>
        <fx:include source="/views/header.fxml"/>
    </top>

    <left>
        <fx:include source="/views/sidebaradmin.fxml"/>
    </left>

    <center>
        <VBox spacing="20" VBox.vgrow="ALWAYS" style="-fx-background-radius: 10;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox spacing="0">
                <HBox alignment="TOP_LEFT">
                    <Button text="แก้ไขพื้นที่" prefHeight="40" prefWidth="140" maxHeight="60"
                           style="-fx-background-color: #FFFFFF; 
                            -fx-background-radius: 10 10 0 0; 
                            -fx-text-fill: black; 
                            -fx-border-color: #e0e0e0; 
                            -fx-border-width: 1 1 0 1; 
                            -fx-border-radius: 10 10 0 0;"/>
                </HBox>
                <VBox spacing="15" style="-fx-background-color: white; 
                -fx-background-radius: 0 16 16 16; 
                -fx-padding: 25; 
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 5); 
                -fx-border-color: #e0e0e0; -fx-border-width: 1; 
                -fx-border-radius: 0 16 16 16;">
                    <HBox spacing="15" alignment="TOP_LEFT">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="ค้นหา"/>
                            <TextField fx:id="searchField" promptText="รหัสพื้นที่" prefHeight="45" maxWidth="400" style="-fx-background-radius: 8;"/>
                        </VBox>
                        <VBox spacing="8">
                            <Label text="โซน"/>
                            <ComboBox fx:id="filterZone" promptText="ทุกโซน" prefWidth="200" prefHeight="45" style="-fx-background-radius: 8;"/>
                        </VBox>
                        <VBox spacing="8">
                            <Label text="สถานะพื้นที่"/>
                            <ComboBox fx:id="filterStatus" promptText="ทุกสถานะ" prefWidth="200" prefHeight="45" style="-fx-background-radius: 8;"/>
                        </VBox>
                    </HBox>
                    <HBox spacing="10">
                        <Button text="กรองข้อมูล" prefWidth="120" prefHeight="40" style="-fx-background-color: #c4c4c4; -fx-background-radius: 8; -fx-text-fill: white;"/>
                        <Button text="รีเซ็ต" prefWidth="100" prefHeight="40" style="-fx-background-color: #e0e0e0; -fx-background-radius: 8; -fx-text-fill: white;"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox spacing="20" VBox.vgrow="ALWAYS" 
                  style="-fx-background-color: white; 
              -fx-background-radius: 10; -fx-padding: 15; 
              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                
                <GridPane hgap="80" vgap="25">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50"/>
                    </columnConstraints>
                    
                    <children>
                        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="โซน" style="-fx-font-size: 15px;"/>
                            <ComboBox fx:id="zoneCombo" 
                                    promptText="ระบุโซน" 
                                    maxWidth="300" 
                                    prefHeight="45" 
                                    style="-fx-background-radius: 8;"/>
                        </VBox>

                        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="รหัสพื้นที่" style="-fx-font-size: 15px;"/>
                            <TextField fx:id="stallIdField" 
                                    promptText="ระบุรหัสพื้นที่" 
                                    maxWidth="300" 
                                    prefHeight="45" 
                                    style="-fx-background-radius: 8;"/>
                        </VBox>

                        <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label text="สิ่งอำนวยความสะดวก" style="-fx-font-size: 15px;"/>
                            <TextArea fx:id="amenitiesField" 
                                    promptText="ระบุสิ่งอำนวยความสะดวก" 
                                    prefHeight="160" wrapText="true" 
                                    maxWidth="Infinity"
                                    style="-fx-background-radius: 8; -fx-border-color: #dcdcdc; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="ขนาดพื้นที่" style="-fx-font-size: 15px;"/>
                            <TextField fx:id="sizeField" promptText="ระบุขนาดพื้นที่" maxWidth="300" prefHeight="45" style="-fx-background-radius: 8;"/>
                        </VBox>

                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="ราคาค่าเช่า / วัน" style="-fx-font-size: 15px;"/>
                            <TextField fx:id="priceField" 
                                    promptText="ระบุราคาค่าเช่า" 
                                    maxWidth="300" 
                                    prefHeight="45" 
                                    style="-fx-background-radius: 8;"/>
                        </VBox>

                        <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label text="สถานะพื้นที่" style="-fx-font-size: 15px;"/>
                            <HBox spacing="15" alignment="CENTER_LEFT" prefHeight="45">
                                <RadioButton  fx:id="statusAvailable" text="ว่าง" ToggleGroup="$statusGroup"/>
                                <RadioButton  fx:id="statusRented" text="ถูกเช่า" ToggleGroup="$statusGroup"/>
                                <RadioButton fx:id="statusMaintenance" text="กำลังดำเนินการ" ToggleGroup="$statusGroup"/>
                                <RadioButton fx:id="statusClosed" text="ปิดปรับปรุง" ToggleGroup="$statusGroup"/>
                            </HBox>
                        </VBox>
                    </children>
                </GridPane>

                <Region VBox.vgrow="ALWAYS" />

                <HBox alignment="BOTTOM_RIGHT">
                    <Button text="บันทึก" prefWidth="160" prefHeight="50"
                            onAction="#handleSave"
                            style="-fx-background-color: #3A3F6A; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>