<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rental.controller.RentalHistoryAdminController"
            style="-fx-background-color: #F5F6F8;">

    <top>
        <fx:include source="/views/header.fxml"/>
    </top>

    <left>
        <fx:include source="/views/sidebaradmin.fxml"/>
    </left>

    <center>
        <VBox spacing="14" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="22" right="22" bottom="22" left="22"/>
            </padding>

            <!-- Filter Card -->
            <VBox spacing="12"
                  style="-fx-background-color:#FFFFFF; -fx-background-radius:10;
                         -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3);">
                <padding>
                    <Insets top="18" right="18" bottom="18" left="18"/>
                </padding>

                <Label text="ประวัติการเช่าพื้นที่"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                <HBox spacing="16">
                    <TextField fx:id="txtCustomer"
                               promptText="ชื่อลูกค้า"
                               HBox.hgrow="ALWAYS"
                               style="-fx-background-radius: 10; -fx-border-radius: 10;"/>

                    <ComboBox fx:id="cbStatus" prefWidth="220" promptText="สถานะ"/>
                </HBox>

                <!-- ✅ วันที่ + จัดเรียง อยู่บรรทัดเดียวกัน -->
                <VBox spacing="6">
                    <Label text="วัน/เดือน/ปี ที่ทำรายการ" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                    <HBox spacing="16" alignment="CENTER_LEFT">
                        <DatePicker fx:id="dpDate" prefWidth="260" />

                        <Label text="จัดเรียง:" style="-fx-font-weight: bold;"/>

                        <ComboBox fx:id="cbSortField" prefWidth="240" promptText="จัดเรียงตาม"/>

                        <ComboBox fx:id="cbSortOrder" prefWidth="200" promptText="ลำดับ"/>
                    </HBox>
                </VBox>

            </VBox>

            <HBox alignment="CENTER_RIGHT">
                <Button text=" พิมพ์รายงาน"
                        onAction="#onPrint"
                        style="-fx-background-color: #6E6E8A; -fx-text-fill: white;
                               -fx-background-radius: 12; -fx-padding: 10 18;">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <image>
                                <Image url="@/images/print.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <!-- Table Card -->
            <VBox VBox.vgrow="ALWAYS"
                  style="-fx-background-color:#FFFFFF;
                         -fx-background-radius:10;
                         -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.15), 12, 0, 0, 3);">
                <padding>
                    <Insets top="12" right="12" bottom="12" left="12"/>
                </padding>

                <TableView fx:id="table"
                           VBox.vgrow="ALWAYS"
                           style="-fx-background-color: transparent;
                                  -fx-background-insets: 0;
                                  -fx-padding: 8;">
                    <columns>
                        <TableColumn fx:id="colCustomer" text="ชื่อลูกค้า"/>
                        <TableColumn fx:id="colDate" text="วัน/เดือน/ปี ทำรายการ"/>
                        <TableColumn fx:id="colStatus" text="สถานะ"/>
                        <TableColumn fx:id="colDetail" text="รายละเอียด"/>
                    </columns>
                </TableView>

            </VBox>
        </VBox>
    </center>
</BorderPane>
