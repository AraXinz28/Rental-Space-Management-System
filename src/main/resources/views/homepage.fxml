<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.HomeController"
            prefWidth="1280"
            prefHeight="700">

    <!-- HEADER -->
    <top>
        <BorderPane prefHeight="70"
                    style="-fx-background-color: linear-gradient(to right, #f0f0f0, #dcdcdc);">

            <left>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="20"/>
                    </padding>

                    <ImageView fitHeight="35" fitWidth="35" preserveRatio="true">
                        <image><Image url="images/logo.png"/></image>
                    </ImageView>

                    <VBox spacing="0" alignment="CENTER_LEFT">
                        <Label text="ระบบจัดการ"
                               style="-fx-font-size: 13px; -fx-font-weight: bold;"/>
                        <Label text="พื้นที่ให้เช่าจำหน่ายสินค้า"
                               style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
            </left>

        </BorderPane>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="18"
              style="-fx-background-color: #f0f0f0;
                     -fx-padding: 20;
                     -fx-pref-width: 200;">

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconhome.png"/></image>
                </ImageView>
                <Label text="หน้าหลัก" style="-fx-font-size: 15px; -fx-font-weight: bold;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconsearch.png"/></image>
                </ImageView>
                <Label text="ค้นหา/ดูผังพื้นที่" style="-fx-font-size: 15px;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconpen.png"/></image>
                </ImageView>
                <Label text="จองพื้นที่" style="-fx-font-size: 15px;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconshop.png"/></image>
                </ImageView>
                <Label text="ชำระเงิน" style="-fx-font-size: 15px;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconcalen.png"/></image>
                </ImageView>
                <Label text="ประวัติการเช่า" style="-fx-font-size: 15px;"/>
            </HBox>

        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: transparent;">
            <content>

                <VBox spacing="25"
                      maxWidth="900"
                      alignment="CENTER"
                      style="-fx-background-color: #f5f5f5;
                             -fx-padding: 20 40 20 40;">

                    <!-- Hero Section -->
                    <VBox spacing="15" alignment="CENTER"
                          style="-fx-background-color: #ffffff;
                                 -fx-border-color: #ddd;
                                 -fx-border-radius: 10;
                                 -fx-background-radius: 10;
                                 -fx-padding: 20;">

                        <HBox spacing="30" alignment="CENTER">

                            <!-- Left Section -->
                            <VBox spacing="10" alignment="CENTER_LEFT">

                                <ImageView fitHeight="250" fitWidth="250" preserveRatio="true">
                                    <image><Image url="images/happy.png"/></image>
                                </ImageView>

                                <Button fx:id="btnEnter"
                                        text="เข้าพื้นที่จำหน่าย"
                                        onAction="#onEnterMarketClick"
                                        onMouseEntered="#handleEnter"
                                        onMouseExited="#handleExit"
                                        style="-fx-padding: 10 35 10 35;
                                               -fx-background-color: #7c7c7cff;
                                               -fx-text-fill: white;
                                               -fx-font-size: 15px;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 25;"/>
                            </VBox>

                            <!-- Right Section -->
                            <HBox spacing="0" alignment="CENTER">

                                <ImageView fitHeight="220" fitWidth="220" preserveRatio="true">
                                    <image><Image url="images/store.png"/></image>
                                </ImageView>

                                <ImageView fitHeight="150" fitWidth="150" preserveRatio="true"
                                           translateX="-20">
                                    <image><Image url="images/sad.png"/></image>
                                </ImageView>

                            </HBox>

                        </HBox>
                    </VBox>

                    <!-- Market Maps Section -->
                    <HBox spacing="25" alignment="CENTER">

                        <!-- Map 1 -->
                        <VBox spacing="15"
                              style="-fx-background-color: #ffffff;
                                     -fx-border-color: #ddd;
                                     -fx-border-radius: 10;
                                     -fx-background-radius: 10;
                                     -fx-padding: 20;
                                     -fx-pref-width: 430;">

                            <Label text="แผนผังที่ 1"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <ImageView fitWidth="250" preserveRatio="true">
                                <image><Image url="images/แผนผัง.png"/></image>
                            </ImageView>

                        </VBox>

                        <!-- Map 2 -->
                        <VBox spacing="15"
                              style="-fx-background-color: #ffffff;
                                     -fx-border-color: #ddd;
                                     -fx-border-radius: 10;
                                     -fx-background-radius: 10;
                                     -fx-padding: 20;
                                     -fx-pref-width: 430;">

                            <Label text="แผนผังที่ 2"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                            <ImageView fitWidth="250" preserveRatio="true">
                                <image><Image url="images/แผนผัง(2).png"/></image>
                            </ImageView>

                        </VBox>

                    </HBox>

                    <Region minHeight="50"/>

                </VBox>

            </content>
        </ScrollPane>
    </center>

</BorderPane>
