<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.HomeController">

    <!-- ✅ HEADER -->
    <top>
        <BorderPane prefHeight="80"
                    style="-fx-background-color: linear-gradient(to right, #f0f0f0, #dcdcdc);">

            <left>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                        <image>
                            <Image url="images/logo.png"/>
                        </image>
                    </ImageView>

                    <VBox spacing="0" alignment="CENTER_LEFT">
                        <Label text="ระบบจัดการ"
                               style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <Label text="พื้นที่ให้เช่าจำหน่ายสินค้า"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
            </left>

        </BorderPane>
    </top>

    <!-- ✅ SIDEBAR -->
    <left>
        <VBox spacing="20"
              style="-fx-background-color: #f0f0f0;
                     -fx-padding: 20;
                     -fx-pref-width: 220;">

            <!-- หน้าหลัก -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconhome.png"/></image>
                </ImageView>
                <Label text="หน้าหลัก" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- ค้นหา/ดูผังพื้นที่ -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconsearch.png"/></image>
                </ImageView>
                <Label text="ค้นหา/ดูผังพื้นที่" style="-fx-font-size: 16px;"/>
            </HBox>

            <!-- จองพื้นที่ -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconpen.png"/></image>
                </ImageView>
                <Label text="จองพื้นที่"
                       style="-fx-font-size: 16px;"/>
            </HBox>

            <!-- ชำระเงิน -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconshop.png"/></image>
                </ImageView>
                <Label text="ชำระเงิน" style="-fx-font-size: 16px;"/>
            </HBox>

            <!-- ประวัติการเช่า -->
            <HBox spacing="12" alignment="CENTER_LEFT">
                <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                    <image><Image url="images/iconcalen.png"/></image>
                </ImageView>
                <Label text="ประวัติการเช่า" style="-fx-font-size: 16px;"/>
            </HBox>

        </VBox>
    </left>

    <!-- ✅ MAIN CONTENT (โค้ดหน้าหลักของรำภา) -->
    <center>
        <ScrollPane fitToWidth="true" pannable="true"
                    style="-fx-background-color: transparent;">

            <content>

                <VBox spacing="30"
                      maxWidth="1000"
                      alignment="CENTER"
                      translateX="200"
                      translateY="40"
                      style="-fx-background-color: #f5f5f5;
                             -fx-padding: 10 100 10 20;">

                    <!-- ✅ Hero Section -->
                    <VBox spacing="10" alignment="CENTER"
                          style="-fx-background-color: #ffffff;
                                 -fx-border-color: #ddd;
                                 -fx-border-radius: 10;
                                 -fx-background-radius: 10;
                                 -fx-padding: 20 40 20 40;">

                        <HBox spacing="40" alignment="CENTER">

                            <!-- ✅ Left Section -->
                            <VBox spacing="10" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">

                                <ImageView fitHeight="350" fitWidth="350" preserveRatio="true"
                                           translateX="60">
                                    <VBox.margin>
                                        <Insets top="60"/>
                                    </VBox.margin>
                                    <image>
                                        <Image url="images/happy.png"/>
                                    </image>
                                </ImageView>

                                <Button fx:id="btnEnter"
                                        text="เข้าพื้นที่จำหน่าย"
                                        onAction="#onEnterMarketClick"
                                        onMouseEntered="#handleEnter"
                                        onMouseExited="#handleExit"
                                        translateX="130"
                                        style="-fx-padding: 10 40 10 40;
                                               -fx-background-color: #7c7c7cff;
                                               -fx-text-fill: white;
                                               -fx-font-size: 16px;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 30;">
                                    <VBox.margin>
                                        <Insets top="5"/>
                                    </VBox.margin>
                                </Button>

                            </VBox>

                            <!-- ✅ Right Section -->
                            <HBox spacing="0" alignment="CENTER">

                                <ImageView fitHeight="300" fitWidth="300" preserveRatio="true"
                                           translateX="100">
                                    <image>
                                        <Image url="images/store.png"/>
                                    </image>
                                </ImageView>

                                <ImageView fitHeight="200" fitWidth="200" preserveRatio="true"
                                           translateX="60">
                                    <HBox.margin>
                                        <Insets top="-150"/>
                                    </HBox.margin>
                                    <image>
                                        <Image url="images/sad.png"/>
                                    </image>
                                </ImageView>

                            </HBox>

                        </HBox>
                    </VBox>

                    <!-- ✅ Market Maps Section (2 Columns) -->
                    <HBox spacing="40" alignment="CENTER">

                        <!-- ✅ Left Big Box -->
                        <VBox spacing="20"
                              style="-fx-background-color: #ffffff;
                                     -fx-border-color: #ddd;
                                     -fx-border-radius: 10;
                                     -fx-background-radius: 10;
                                     -fx-padding: 30;
                                     -fx-pref-width: 600;">

                            <Label text="แผนผังที่ 1"
                                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 0;">
                                <ImageView fitWidth="300" preserveRatio="true">
                                    <image>
                                        <Image url="images/แผนผัง.png"/>
                                    </image>
                                </ImageView>
                            </VBox>

                        </VBox>

                        <!-- ✅ Right Big Box -->
                        <VBox spacing="20"
                              style="-fx-background-color: #ffffff;
                                     -fx-border-color: #ddd;
                                     -fx-border-radius: 10;
                                     -fx-background-radius: 10;
                                     -fx-padding: 30;
                                     -fx-pref-width: 600;">

                            <Label text="แผนผังที่ 2"
                                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 0;">
                                <ImageView fitWidth="300" preserveRatio="true">
                                    <image>
                                        <Image url="images/แผนผัง(2).png"/>
                                    </image>
                                </ImageView>
                            </VBox>

                        </VBox>

                    </HBox>

                    <!-- ✅ Footer Space -->
                    <Region minHeight="120"/>

                </VBox>

            </content>
        </ScrollPane>
    </center>

</BorderPane>
