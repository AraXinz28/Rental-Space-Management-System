<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.HomeController"
            prefWidth="1280" prefHeight="700">

    <!-- ================= HEADER ================= -->
    <fx:include fx:id="header" source="header.fxml"
                AnchorPane.topAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"/>

    <!-- ================= MAIN AREA ================= -->
    <HBox spacing="0"
          AnchorPane.topAnchor="80"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          AnchorPane.bottomAnchor="0">

        <!-- ================= SIDEBAR ================= -->
        <fx:include fx:id="sidebar" source="sidebarTenant.fxml"/>

        <!-- ================= CONTENT ================= -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS">
            <content>
                <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 20;">

                    <!-- Hero Section -->
                    <VBox spacing="15" alignment="CENTER"
                          style="-fx-background-color: #ffffff;
                                 -fx-border-color: #ddd;
                                 -fx-border-radius: 10;
                                 -fx-background-radius: 10;
                                 -fx-padding: 20;
                                 -fx-max-width: 900;">
                        <HBox spacing="30" alignment="CENTER">

                            <!-- Left Section -->
                            <VBox spacing="10" alignment="CENTER">
                                <ImageView fitHeight="250" fitWidth="250" preserveRatio="true">
                                    <image><Image url="images/happy.png"/></image>
                                </ImageView>

                              <Button fx:id="btnEnter"
                                        text="เข้าพื้นที่จำหน่าย"
                                        onMouseClicked="#onEnterMarketClick"
                                        onMouseEntered="#handleEnter"
                                        onMouseExited="#handleExit"
                                        style="-fx-padding: 10 35 10 35;
                                               -fx-background-color: #7c7c7cff;
                                               -fx-text-fill: white;
                                               -fx-font-size: 15px;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 25;"/>
                            </VBox>

                            <!-- Right Section -->
                            <HBox spacing="0" alignment="CENTER">
                                <ImageView fitHeight="220" fitWidth="220" preserveRatio="true" 
                                translateX="120">
                                    <image><Image url="images/store.png"/></image>
                                </ImageView>

                                <ImageView fitHeight="150" fitWidth="150" preserveRatio="true"
                                           translateX="120">
                                    <image><Image url="images/sad.png"/></image>
                                </ImageView>
                            </HBox>

                        </HBox>
                    </VBox>

                    <!-- Market Maps Section -->
                    <HBox spacing="25" alignment="CENTER">

                        <!-- Map 1 -->
                        <VBox spacing="15"
                              style="-fx-background-color: #ffffff;
                                     -fx-border-color: #ddd;
                                     -fx-border-radius: 10;
                                     -fx-background-radius: 10;
                                     -fx-padding: 20;
                                     -fx-pref-width: 440;"
                              alignment="CENTER">

                            <Label text="แผนผังที่ 1"
                                   style="-fx-font-size: 18px; -fx-font-weight: medium;"/>

                            <ImageView fx:id="map1"
                                       fitWidth="300"
                                       preserveRatio="true"
                                       onMouseClicked="#openMap1">
                                <image><Image url="images/แผนผัง.png"/></image>
                            </ImageView>

                        </VBox>

                        <!-- Map 2 -->
                        <VBox spacing="15"
                              style="-fx-background-color: #ffffff;
                                     -fx-border-color: #ddd;
                                     -fx-border-radius: 10;
                                     -fx-background-radius: 10;
                                     -fx-padding: 20;
                                     -fx-pref-width: 440;"
                              alignment="CENTER">

                            <Label text="แผนผังที่ 2"
                                   style="-fx-font-size: 18px; -fx-font-weight: medium;"/>

                            <ImageView fx:id="map2"
                                       fitWidth="300"
                                       preserveRatio="true"
                                       onMouseClicked="#openMap2">
                                <image><Image url="images/แผนผัง(2).png"/></image>
                            </ImageView>

                        </VBox>

                    </HBox>

                    <!-- เว้นระยะด้านล่าง -->
                    <Region minHeight="50"/>

                </VBox>
            </content>
        </ScrollPane>

    </HBox>

</AnchorPane>
