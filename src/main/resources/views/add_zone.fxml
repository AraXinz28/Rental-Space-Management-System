<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rental.controller.AddZoneController"
            style="-fx-background-color: #f8f9fa;">

    <!-- ===== HEADER ===== -->
    <top>
        <fx:include source="/views/header.fxml"/>
    </top>

    <!-- ===== SIDEBAR ===== -->
    <left>
        <fx:include source="/views/sidebaradmin.fxml"/>
    </left>

    <!-- ===== CENTER ===== -->
    <center>

        <!-- ใช้ VBox ครอบทั้งหมด -->
        <VBox alignment="TOP_LEFT" spacing="0">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- ===== TAB (อยู่นอกกรอบ) ===== -->
            <HBox alignment="BOTTOM_LEFT">
                <Button text="เพิ่มโซน" 
                        prefWidth="140"
                        prefHeight="42"
                        style="
                            -fx-text-fill: black;
                            -fx-background-color: white;
                            -fx-background-radius: 8 8 0 0;
                            -fx-border-radius: 8 8 0 0;
                            -fx-border-color: #e0e0e0;
                            -fx-border-width: 1;
                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 0, 4);
                        "/>
            </HBox>

            <!-- ===== CARD (กรอบเขียวในรูปคุณ) ===== -->
            <VBox spacing="18"
            VBox.vgrow="ALWAYS"
                  maxHeight="300"
                  
                  style="
                    -fx-background-color: white;
                    -fx-padding: 30;

                    -fx-background-radius: 0 16 16 16;
                    -fx-border-radius: 0 16 16 16;
                    -fx-border-color: #e0e0e0;
                    -fx-border-width: 1;
                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0, 0, 2);
                  ">

                <!-- ชื่อโซน -->
                <VBox spacing="8">
                    <Label text="ชื่อโซน" style="-fx-font-size: 15px;"/>
                    <TextField fx:id="zoneNameField"
                               promptText="ระบุชื่อโซน"
                               prefWidth="350"
                               prefHeight="40"
                               maxWidth="350"
                               style="
                                 -fx-background-radius: 8;
                                 -fx-font-size: 14px;
                                 -fx-border-radius: 8;
                               "/>
                </VBox>

                <!-- จำนวนล็อก -->
                <VBox spacing="8">
                    <Label text="จำนวนล็อก" style="-fx-font-size: 15px;"/>
                    <TextField fx:id="slotCountField"
                               promptText="ระบุจำนวนล็อก"
                               prefWidth="350"
                               prefHeight="40"
                               maxWidth="350"
                               style="
                                 -fx-background-radius: 8;
                                 -fx-font-size: 14px;
                                 -fx-border-radius: 8;
                               "/>
                </VBox>

                <!-- ปุ่มบันทึก -->
                <HBox alignment="CENTER_RIGHT">
                    <Button text="เพิ่มโซน"
                            fx:id="saveBtn"
                            onAction="#handleAddZone"
                            prefWidth="120"
                            prefHeight="40"
                            style="
                              -fx-background-color: #3A3F6A;
                              -fx-text-fill: white;
                              -fx-font-weight: bold;
                              -fx-background-radius: 8;
                            "/>
                </HBox>

            </VBox>
        </VBox>
    </center>

</BorderPane>
